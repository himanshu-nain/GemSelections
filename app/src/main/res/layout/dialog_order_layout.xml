<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/prompt_image"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:id="@+id/order_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:focusable="false"
                android:textStyle="bold"
                android:id="@+id/prompt_code"
                android:layout_marginTop="10dp"
                android:inputType="textPersonName"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textColor="#555"
                android:fontFamily="serif"
                android:background="#10a0a0a0"
                android:hint="Jewellery code"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <EditText
                android:id="@+id/prompt_name"
                android:layout_marginTop="10dp"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:textColor="#555"
                android:fontFamily="serif"
                android:drawableLeft="@drawable/ic_person"
                android:background="#10a0a0a0"
                android:hint="Name"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <EditText
                android:id="@+id/prompt_email"
                android:layout_marginTop="10dp"
                android:inputType="textPersonName"
                android:textColor="#555"
                android:textSize="18sp"
                android:fontFamily="serif"
                android:drawableLeft="@drawable/ic_email"
                android:background="#10a0a0a0"
                android:hint="Email"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <EditText
                android:id="@+id/prompt_mobile"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:textSize="18sp"
                android:textColor="#555"
                android:fontFamily="serif"
                android:drawableLeft="@drawable/ic_call"
                android:background="#10a0a0a0"
                android:hint="Phone"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <EditText
                android:id="@+id/prompt_remarks"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:textSize="18sp"
                android:textColor="#555"
                android:fontFamily="serif"
                android:background="#10a0a0a0"
                android:hint="Remarks(if any)"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/submit"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimary"
                android:padding="20dp"
                android:text="Request Price"
                android:textColor="#fff"
                android:textSize="16sp"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>