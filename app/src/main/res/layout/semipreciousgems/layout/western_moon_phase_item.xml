<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/western_horoscope_moon_phase_type_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:text="Phase Type : " />

    <TextView
        android:id="@+id/western_horoscope_moon_phase_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:text="Date : " />

    <TextView
        android:id="@+id/western_horoscope_moon_phase_sign_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:text="Sign : " />

    <TextView
        android:id="@+id/western_horoscope_moon_phase_house_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:text="House : " />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@color/black" />

</LinearLayout>