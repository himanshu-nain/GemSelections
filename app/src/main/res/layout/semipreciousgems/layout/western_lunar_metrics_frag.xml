<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lunar_metrics_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Month : "/>

    <TextView
        android:id="@+id/lunar_metrics_within_perigee_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Within perigee range : "/>

    <TextView
        android:id="@+id/lunar_metrics_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Distance : "/>

    <TextView
        android:id="@+id/lunar_metrics_within_apogee_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Within apogee range : "/>

    <TextView
        android:id="@+id/lunar_metrics_apogee_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Apogee range : "/>


</LinearLayout>