<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools1="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tool"
    tools1:context=".JewelleryAlpha.GemStudded.GemStuddedActivity"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:orientation="vertical">
    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/gemstudded_video"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.google.android.youtube.player.YouTubePlayerView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Checkout following Gem Studded items..."
        android:textColor="#444"
        android:textSize="18sp"
        />

    <GridView
        android:id="@+id/gemstudded_list"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:footerDividersEnabled="false"
        android:numColumns="2"
        android:padding="1dp" />
</LinearLayout>
